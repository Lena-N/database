create TABLE customers(
   customer_id int PRIMARY KEY,
    first_name varchar(20) NOT null,
    last_name varchar(20) NOT null,
    phone varchar(15),
    email varchar(40) not null,
    zip_code varchar(5) NOT null,
    city varchar(10) 
    check(city in('riyad','macca','madina'))
  );
 CREATE TABLE orders(
    order_id int PRIMARY key,
    customer_id int,
    order_status int not null,
    required_date date,
    shipped_date date,
    store_id int not null,
    staff_id int not null,
    CONSTRAINT order_fk FOREIGN KEY(customer_id) REFERENCES customers(customer_id)
    );
    create table stores(
	store_id int PRIMARY key,
    store_name varchar(10) NOT null,
    phone varchar(25),
    email varchar(30) not null,
    street varchar(15) ,
    city varchar(10),
    state varchar(10),
    zip_code varchar(5)
);
ALTER TABLE orders
ADD CONSTRAINT store_orders_fk FOREIGN KEY(store_id) REFERENCES stores(store_id);

 create table staff(
	staff_id int PRIMARY key,
    first_name varchar(10) NOT null,
    last_name varchar(10) not null,
    email varchar(30) UNIQUE,    
    phone varchar(25),
    active int,
    store_id int,
    manager_id int
);
ALTER TABLE staffs
ADD CONSTRAINT store_staff_fk FOREIGN KEY(store_id) REFERENCES stores(store_id);


ALTER TABLE customers
ADD street varchar(30) not null;

ALTER table customers
MODIFY street varchar(35);
